{
  "manifest_version": 3,
  "name": "Elasticsearch Upgrade Monitoring",
  "version": "1.0.0",
  "description": "Real-time monitoring dashboard for Elasticsearch cluster upgrades. Track node versions, shard recovery, allocation status.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Open Elasticsearch Monitor",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}

